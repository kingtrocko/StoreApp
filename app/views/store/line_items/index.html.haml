%h1 Listing line_items

%table
  %thead
    %tr
      %th Product
      %th Cart
      %th Quantity
      %th
      %th
      %th
      
  %tbody
    - @line_items.each do |line_item|
      %tr
        %td= line_item.product
        %td= line_item.cart
        %td= line_item.quantity
        %td= link_to 'Show', [:store, line_item]
        %td= link_to 'Edit', edit_store_line_item_path(line_item)
        %td= link_to 'Destroy', [:store, line_item], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Line item', new_store_line_item_path
